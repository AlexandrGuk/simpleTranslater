{
  "name": "Simple Translator",
  "version": "1.00",
  "manifest_version": 2,
  "description": "Простой переаодчик с русского на английский! Выдели текст -> посмотри перевод!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "icons/*.png"
  ],
  "minimum_chrome_version": "55",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "all_frames": true
    }
  ]
}